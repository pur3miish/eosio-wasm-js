{
  "name": "eosio-wasm-js",
  "version": "1.0.0",
  "description": "A utility tool that serialises EOSIO based blockchain types to WebAssembly hex string.",
  "main": "public/index.js",
  "scripts": {
    "prepare": "npm run prepare:jsdoc && npm run prepare:prettier",
    "prepare:jsdoc": "jsdoc-md",
    "prepare:prettier": "prettier --write readme.md && prettier --write changelog.md",
    "test": "npm run test:api && npm run test:eslint && npm run test:prettier",
    "test:api": "coverage-node test/index.test.mjs",
    "test:eslint": "eslint .",
    "test:prettier": "prettier -c .",
    "prepublishOnly": "npm test"
  },
  "files": [
    "public",
    "private"
  ],
  "engines": {
    "node": ">= 13"
  },
  "browserslist": [
    "> 0.5%, not OperaMini all, not IE > 0, not dead"
  ],
  "exports": {
    ".": {
      "import": "./public/index.js",
      "require": "./public/index.js"
    },
    "./public/*": "./public/*",
    "./package": "./package.json",
    "./package.json": "./package.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pur3miish/eosio-wasm-js.git"
  },
  "keywords": [
    "EOSIO",
    "blockchain",
    "webassembly",
    "serialise",
    "types",
    "javascript"
  ],
  "author": "pur3miish",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pur3miish/eosio-wasm-js/issues"
  },
  "homepage": "https://github.com/pur3miish/eosio-wasm-js#readme",
  "devDependencies": {
    "coverage-node": "^5.0.1",
    "eslint": "^7.20.0",
    "eslint-config-env": "^21.0.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-compat": "^3.9.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^35.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "jsdoc-md": "^11.0.0",
    "prettier": "^2.2.1",
    "test-director": "^6.0.0"
  },
  "dependencies": {
    "base58-js": "^1.0.0",
    "ripemd160-js": "^1.2.0"
  }
}
